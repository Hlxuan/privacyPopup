/* components/privacyPopup/privacyPopup.wxss */

.privacyPopup-show {
	opacity: 1;
	transition: all 300ms;
}

.privacyPopup-hide {
	opacity: 0;
	transition: all 300ms;
}

.privacyPopup-mask {
	background-color: rgba(0, 0, 0, 0.8);
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 9999;
}

.privacyPopup {
	position: fixed;
	left: 0;
	background-color: white;
	width: 100%;
	border-top-left-radius: 20px;
	border-top-right-radius: 20px;
	padding: 20px;
	box-sizing: border-box;
	z-index: 9999;
}

.privacyPopup.privacyPopup-show {
	bottom: 0;
	transition: all 300ms;
}

.privacyPopup.privacyPopup-hide {
	bottom: -500px;
	transition: all 300ms;
}

.privacyPopup .privacyPopup-header {
	font-size: 18px;
	text-align: center;
	margin-bottom: 20px;
	font-weight: bold;
}

.privacyPopup .privacyPopup-content {
	text-align: justify;
	line-height: 1.5;
}

.privacyPopup .privacyPopup-content .privacyPopup-p {
	margin-top: 5px;
}

.privacyPopup .privacyPopup-link {
	color: #586C94;
}

.privacyPopup .privacyPopup-buttonArea {
	display: flex;
	margin: 30px auto;
}

.privacyPopup .privacyPopup-buttonArea .privacyPopup-item {
	width: calc(100%/2);
}

.privacyPopup .privacyPopup-buttonArea .privacyPopup-item button {
	width: 80%;
}